<BaseLayout pageTitle={"About me"}>
  <main>
    <section class="pb-12">
      <div class="flex flex-col items-center pb-10">
        <img
          class="w-64 h-64 border-2 rounded-full border-blue-200 mb-5"
          alt="Portrait of Marcin Parda on blurry forest background."
          src="public/face.png"
        />
        <header class="flex flex-col items-center">
          <h1 class="text-5xl font-bold pb-4">Marcin Parda</h1>
          <h2 class="text-2xl text-gray-600">
            Senior Frontend Developer at EY GDS
          </h2>
